<Window x:Class="HealthCareManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Health Care Management" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
             <Image  Width="100" Height="100" Margin="10"/>
            <TextBlock Text="Username" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="5"/>
            <TextBlock Text="Password" VerticalAlignment="Center" Margin="5"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="5"/>
            <Button Content="Login" Click="Login_Click" Margin="5"/>
            <Button Content="New User? Sign up" Click="Signup_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
