<Window x:Class="HealthCareManagement.AddPrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Details and Prescription" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Patient Name" Margin="5"/>
            <TextBox x:Name="txtPatientName" Width="200" Margin="5" IsReadOnly="True"/>
            <TextBlock Text="Contact Number" Margin="5"/>
            <TextBox x:Name="txtContactNumber" Width="200" Margin="5" IsReadOnly="True"/>
            <TextBlock Text="Past Prescriptions" Margin="5"/>
            <ListView x:Name="lstPrescriptions" Width="200" Height="100" Margin="5"/>
            <TextBlock Text="Add New Prescription" Margin="5"/>
            <TextBox x:Name="txtPrescriptionDetails" Width="200" Height="100" Margin="5"/>
            <Button Content="Save Prescription" Click="SavePrescription_Click" Margin="5"/>
            <Button Content="Back" Click="Back_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
